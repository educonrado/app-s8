<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="app_s8.Views.IngresoPage"
             Title="IngresoPage">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Border Grid.Row="0" 
                    BackgroundColor="White" 
                    Stroke="#E1E8ED" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16">
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                </Border.Shadow>

                <StackLayout Padding="24" Spacing="16">
                    <!-- Header del formulario -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="8">
                        <Label Text="ðŸ’°" FontSize="24"/>
                        <Label Text="Nuevo Ingreso" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="#2D3748"/>
                    </StackLayout>

                    <BoxView HeightRequest="1" BackgroundColor="#E2E8F0" Margin="0,0,0,8"/>

                    <!-- Campos del formulario en grid responsivo -->
                    <Grid RowSpacing="16" ColumnSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fila 1 - Monto y CategorÃ­a -->
                        <Border Grid.Row="0" Grid.Column="0" 
                    BackgroundColor="#F7FAFC" 
                    Stroke="#CBD5E0" 
                    StrokeShape="RoundRectangle 8">
                            <Entry x:Name="montoEntry" 
                       Placeholder="ðŸ’µ Monto" 
                       Keyboard="Numeric"
                       BackgroundColor="Transparent"
                       TextColor="#2D3748"
                       PlaceholderColor="#718096"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" 
                    BackgroundColor="#F7FAFC" 
                    Stroke="#CBD5E0" 
                    StrokeShape="RoundRectangle 8">
                            <Picker x:Name="categoriaPicker"
                        BackgroundColor="Transparent"
                        TextColor="#2D3748"
                        Title="CategorÃ­a">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Ventas</x:String>
                                        <x:String>Salario</x:String>
                                        <x:String>Freelance</x:String>
                                        <x:String>Inversiones</x:String>
                                        <x:String>Bonos</x:String>
                                        <x:String>Regalos</x:String>
                                        <x:String>Otros</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>

                        <!-- Fila 2 - Fecha -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    BackgroundColor="#F7FAFC" 
                    Stroke="#CBD5E0" 
                    StrokeShape="RoundRectangle 8">
                            <StackLayout Orientation="Horizontal" Padding="12,0" Spacing="8">
                                <Label Text="ðŸ“…" FontSize="16" VerticalOptions="Center"/>
                                <DatePicker x:Name="fechaDatePicker" 
                               Format="dd/MM/yyyy"
                               BackgroundColor="Transparent"
                               TextColor="#2D3748"
                               HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </Border>

                        <!-- Fila 3 - DescripciÃ³n y Cuenta -->
                        <Border Grid.Row="2" Grid.Column="0" 
                    BackgroundColor="#F7FAFC" 
                    Stroke="#CBD5E0" 
                    StrokeShape="RoundRectangle 8">
                            <Entry x:Name="descripcionEntry" 
                       Placeholder="ðŸ“ DescripciÃ³n"
                       BackgroundColor="Transparent"
                       TextColor="#2D3748"
                       PlaceholderColor="#718096"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="1" 
                    BackgroundColor="#F7FAFC" 
                    Stroke="#CBD5E0" 
                    StrokeShape="RoundRectangle 8">
                            <Picker x:Name="cuentaPicker" 
                        Title="Cuenta"
                        BackgroundColor="Transparent"
                        TextColor="#2D3748">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Efectivo</x:String>
                                        <x:String>Cuenta bancaria</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>

                        <!-- Fila 4 - Nota -->
                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                    BackgroundColor="#F7FAFC" 
                    Stroke="#CBD5E0" 
                    StrokeShape="RoundRectangle 8">
                            <Editor x:Name="notaEditor" 
                        Placeholder="ðŸ“„ Nota adicional..." 
                        HeightRequest="80"
                        BackgroundColor="Transparent"
                        TextColor="#2D3748"
                        PlaceholderColor="#718096"/>
                        </Border>
                    </Grid>

                    <!-- Botones de acciÃ³n -->
                    <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="Center" 
                     Spacing="12"
                     Margin="0,8,0,0">

                        <Button x:Name="guardarButton" 
                                Text="ðŸ’¾ Guardar" 
                                BackgroundColor="#48BB78" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="120"
                                HeightRequest="50"
                                Clicked="OnGuardarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#48BB78" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>
                        <Button x:Name="BtnActualizar" 
                                Text="âœï¸ Actualizar" 
                                BackgroundColor="#ED8936" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="130"
                                HeightRequest="50"
                                IsVisible="False"
                                Clicked="BtnActualizar_Clicked">
                            <Button.Shadow>
                                <Shadow Brush="#ED8936" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                        <Button x:Name="cancelarButton" 
                                Text="âŒ Cancelar" 
                                BackgroundColor="#A0AEC0" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="120"
                                HeightRequest="50"
                                Clicked="OnCancelarClicked" >
                            <Button.Shadow>
                                <Shadow Brush="#A0AEC0" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                    </StackLayout>
                </StackLayout>
            </Border>
            
            <Border>
                <StackLayout Padding="15">
                    <Label Text="Listado de ingresos" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10"/>
                    <ListView x:Name="listadoIngresos"
                              ItemsSource="{Binding Ingresos}" 
                              HasUnevenRows="True"
                              SelectionMode="Single"
                              ItemSelected="listadoIngresos_ItemSelected">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="75,*,90,40" Padding="8">
                                        <Label Grid.Column="0" 
                                               Text="{Binding FechaFormateada}"
                                               FontSize="13"
                                               LineBreakMode="NoWrap"
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Descripcion}"
                                               LineBreakMode="TailTruncation"
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="2" 
                                               Text="{Binding MontoFormateado}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center"
                                               LineBreakMode="NoWrap"/>
                                        <Button Text="ðŸ—‘ï¸"
                                                Grid.Column="3"
                                                x:Name="btnEliminar"
                                                CommandParameter="{Binding .}"
                                                Clicked="btnEliminar_Clicked"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                ToolTipProperties.Text="Eliminar"
                                                WidthRequest="32"
                                                HeightRequest="32"
                                                Padding="0"
                                                CornerRadius="16"
                                                BackgroundColor="Transparent"
                                                TextColor="#EF4444"></Button>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Border>

            <!-- Botones tipo toggle para los grÃ¡ficos -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <Button x:Name="btnPorFecha" Text="Por Fecha" Clicked="OnPag1Clicked"/>
                <Button x:Name="btnPorCategoria" Text="Por CategorÃ­a" Clicked="OnPag2Clicked"/>
                <Button x:Name="btnResumen" Text="Resumen" Clicked="OnPag3Clicked" IsVisible="False"/>
            </StackLayout>
            <!-- GrÃ¡fico por Fecha -->
            <microcharts:ChartView x:Name="chartPorFecha" HeightRequest="200" IsVisible="False" />

            <!-- GrÃ¡fico por CategorÃ­a -->
            <microcharts:ChartView x:Name="chartPorCategoria" HeightRequest="200" IsVisible="False" />

            <!-- GrÃ¡fico Resumen -->
            <microcharts:ChartView x:Name="chartResumen" HeightRequest="200" IsVisible="False" />
        </StackLayout>
    </ScrollView>
</ContentPage>