<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_s8.Views.ScannerRecibo"
             Title="ScannerRecibo">
    <VerticalStackLayout Spacing="10" Padding="20">
        <Button x:Name="btnCapturarRecibo"
                Text="Capturar Recibo"
                Clicked="btnCapturarRecibo_Clicked"
                HorizontalOptions="Center"></Button>
        <Image x:Name="ImageRecibo"
               WidthRequest="200"></Image>
        <Label Text="Total detectado:"
               FontAttributes="Bold"
               HorizontalOptions="Center"></Label>
        <Label x:Name="lblTotal" 
               Text="$ --" 
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Usar Este Total" 
                Clicked="btnUsarTotal_Clicked"
                IsEnabled="False"
                x:Name="btnUsarTotal"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>