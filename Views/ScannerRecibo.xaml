<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_s8.Views.ScannerRecibo"
             Title="ScannerRecibo">
    <ScrollView>
        <VerticalStackLayout Spacing="10" 
                             Padding="20"
                             VerticalOptions="Center">
            <Button x:Name="btnCapturarRecibo"
                Text="ðŸ“¸ Escanear Recibo"
                Clicked="btnCapturarRecibo_Clicked"
                HorizontalOptions="Center"></Button>
            <Border x:Name="brdImagen" 
                    WidthRequest="200"
                    HeightRequest="250"
                    Padding="10"
                    Margin="10"
                    IsVisible="False">
                <Image x:Name="ImageRecibo"
                   WidthRequest="200"
                   Aspect="AspectFit"
                   Opacity="0.9"></Image>
            </Border>

            <Label Text="Total detectado:"
               FontSize="Header"
               HorizontalOptions="Center"></Label>
            <Label x:Name="lblTotal" 
               Text="$ --" 
               FontSize="24"
               HorizontalOptions="Center" />

            <Grid Padding="10"
                  Margin="10"
                  ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Text="âœ… Ingreso" 
                    Clicked="btnRegistrarIngreso_Clicked"
                    IsEnabled="False"
                    Grid.Column="0"
                    x:Name="btnRegistrarIngreso"
                    Margin="0,20,0,0" />
                <Button Text="â­• Gasto" 
                    Clicked="btnRegistarGasto_Clicked"
                    Grid.Column="1"
                    IsEnabled="False"
                    x:Name="btnRegistarGasto"
                    Margin="0,20,0,0" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>