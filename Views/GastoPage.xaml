<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_s8.Views.GastoPage"
             Title="Gesti√≥n de Gastos"
             >

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Formulario CRUD Mejorado -->
            <Border Grid.Row="0" 
                    BackgroundColor="White" 
                    Stroke="#E1E8ED" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16">
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                </Border.Shadow>

                <StackLayout Padding="24" Spacing="16">
                    <!-- Header del formulario -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="8">
                        <Label Text="üí∞" FontSize="24"/>
                        <Label Text="Nuevo Gasto" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="#2D3748"/>
                    </StackLayout>

                    <BoxView HeightRequest="1" BackgroundColor="#E2E8F0" Margin="0,0,0,8"/>

                    <!-- Campos del formulario en grid responsivo -->
                    <Grid RowSpacing="16" ColumnSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fila 1 -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryMonto" 
                                   Placeholder="üíµ Monto" 
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   TextColor="#2D3748"
                                   PlaceholderColor="#718096"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Picker x:Name="categoriaPicker"
                                    BackgroundColor="Transparent"
                                    TextColor="#2D3748"
                                    ToolTipProperties.Text="Categoria"
                                    Title="Categoria">
                                <Picker.ItemsSource>

                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Insumos/Materias Primas</x:String>
                                        <x:String>Servicios Profesionales</x:String>
                                        <x:String>Marketing Digital</x:String>
                                        <x:String>Log√≠stica/Env√≠os</x:String>
                                        <x:String>Infraestructura (Alquiler, Luz, Internet)</x:String>
                                        <x:String>Impuestos y Contribuciones</x:String>
                                        <x:String>Gastos Operativos Varios</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>

                        <!-- Fila 2 -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <StackLayout Orientation="Horizontal" Padding="12,0" Spacing="8">
                                <Label Text="üìÖ" FontSize="16" VerticalOptions="Center"/>
                                <DatePicker x:Name="DatePickerFecha" 
                                           Format="dd/MM/yyyy"
                                           BackgroundColor="Transparent"
                                           TextColor="#2D3748"
                                           HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </Border>

                        <!-- Fila 3 -->
                        <Border Grid.Row="2" Grid.Column="0" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryDescripcion" 
                                   Placeholder="üìù Descripci√≥n"
                                   BackgroundColor="Transparent"
                                   TextColor="#2D3748"
                                   PlaceholderColor="#718096"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="1" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Picker x:Name="cuentaPicker" 
                                    Title="Cuenta"
                                    BackgroundColor="Transparent"
                                    TextColor="#2D3748">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Efectivo</x:String>
                                        <x:String>Cuenta bancaria</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>

                        <!-- Fila 4 - Nota (span completo) -->
                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Editor x:Name="EditorNota" 
                                    Placeholder="üìÑ Nota adicional..." 
                                    HeightRequest="80"
                                    BackgroundColor="Transparent"
                                    TextColor="#2D3748"
                                    PlaceholderColor="#718096"/>
                        </Border>
                    </Grid>

                    <!-- Botones de acci√≥n -->
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center" 
                                 Spacing="12"
                                 Margin="0,8,0,0">

                        <Button x:Name="BtnGuardar" 
                                Text="üíæ Guardar" 
                                BackgroundColor="#48BB78" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="120"
                                HeightRequest="50"
                                Clicked="OnGuardarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#48BB78" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                        <Button x:Name="BtnActualizar" 
                                Text="‚úèÔ∏è Actualizar" 
                                BackgroundColor="#ED8936" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="130"
                                HeightRequest="50"
                                IsVisible="False"
                                Clicked="OnActualizarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#ED8936" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                        <Button x:Name="BtnCancelar" 
                                Text="‚ùå Cancelar" 
                                BackgroundColor="#A0AEC0" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="120"
                                HeightRequest="50"
                                Clicked="OnCancelarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#A0AEC0" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                    </StackLayout>
                </StackLayout>
            </Border>

            <Border Grid.Row="1" >
                <StackLayout Padding="15">
                    <Label Text="Listado de gastos" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10"/>
                    <ListView x:Name="listadoGastos"
                              ItemsSource="{Binding Gastos}" 
                              HasUnevenRows="True"
                              ItemSelected="listadoGastos_ItemSelected"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="75,*,90,40" Padding="8">
                                        <Label Grid.Column="0" 
                                               Text="{Binding FechaFormateada}"
                                               FontSize="13"
                                               LineBreakMode="NoWrap"
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Descripcion}"
                                               LineBreakMode="TailTruncation"
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="2" 
                                               Text="{Binding MontoFormateado}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center"
                                               LineBreakMode="NoWrap"/>
                                        <Button Text="üóëÔ∏è"
                                                Grid.Column="3"
                                                x:Name="btnEliminar"
                                                CommandParameter="{Binding .}"
                                                Clicked="btnEliminar_Clicked"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                ToolTipProperties.Text="Eliminar"
                                                WidthRequest="32"
                                                HeightRequest="32"
                                                Padding="0"
                                                CornerRadius="16"
                                                BackgroundColor="Transparent"
                                                TextColor="#EF4444"></Button>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Border>
        </Grid>
    </ScrollView>

</ContentPage>