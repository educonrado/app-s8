<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_s8.Views.GastoPage"
             Title="GestiÃ³n de Gastos"
             >

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Formulario CRUD Mejorado -->
            <Border Grid.Row="0" 
                    BackgroundColor="White" 
                    Stroke="#E1E8ED" 
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16">
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                </Border.Shadow>

                <StackLayout Padding="24" Spacing="16">
                    <!-- Header del formulario -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="8">
                        <Label Text="ðŸ’°" FontSize="24"/>
                        <Label Text="Nuevo Gasto" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="#2D3748"/>
                    </StackLayout>

                    <BoxView HeightRequest="1" BackgroundColor="#E2E8F0" Margin="0,0,0,8"/>

                    <!-- Campos del formulario en grid responsivo -->
                    <Grid RowSpacing="16" ColumnSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fila 1 -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryMonto" 
                                   Placeholder="ðŸ’µ Monto" 
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   TextColor="#2D3748"
                                   PlaceholderColor="#718096"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Picker x:Name="categoriaPicker"
                                    BackgroundColor="Transparent"
                                    TextColor="#2D3748"
                                    ToolTipProperties.Text="Categoria"
                                    Title="Categoria">
                                <Picker.ItemsSource>
                                    
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Ventas</x:String>
                                        <x:String>Freelance</x:String>
                                        <x:String>Inversiones</x:String>
                                        <x:String>Salario</x:String>
                                        <x:String>Bonos</x:String>
                                        <x:String>Regalos</x:String>
                                        <x:String>Otros</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>

                        <!-- Fila 2 -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <StackLayout Orientation="Horizontal" Padding="12,0" Spacing="8">
                                <Label Text="ðŸ“…" FontSize="16" VerticalOptions="Center"/>
                                <DatePicker x:Name="DatePickerFecha" 
                                           Format="dd/MM/yyyy"
                                           BackgroundColor="Transparent"
                                           TextColor="#2D3748"
                                           HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </Border>

                        <!-- Fila 3 -->
                        <Border Grid.Row="2" Grid.Column="0" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryDescripcion" 
                                   Placeholder="ðŸ“ DescripciÃ³n"
                                   BackgroundColor="Transparent"
                                   TextColor="#2D3748"
                                   PlaceholderColor="#718096"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="1" 
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Picker x:Name="cuentaPicker" 
                                    Title="Cuenta"
                                    BackgroundColor="Transparent"
                                    TextColor="#2D3748">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Efectivo</x:String>
                                        <x:String>Cuenta bancaria</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>

                        <!-- Fila 4 - Nota (span completo) -->
                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                BackgroundColor="#F7FAFC" 
                                Stroke="#CBD5E0" 
                                StrokeShape="RoundRectangle 8">
                            <Editor x:Name="EditorNota" 
                                    Placeholder="ðŸ“„ Nota adicional..." 
                                    HeightRequest="80"
                                    BackgroundColor="Transparent"
                                    TextColor="#2D3748"
                                    PlaceholderColor="#718096"/>
                        </Border>
                    </Grid>

                    <!-- Botones de acciÃ³n -->
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center" 
                                 Spacing="12"
                                 Margin="0,8,0,0">

                        <Button x:Name="BtnGuardar" 
                                Text="ðŸ’¾ Guardar" 
                                BackgroundColor="#48BB78" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="120"
                                HeightRequest="50"
                                Clicked="OnGuardarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#48BB78" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                        <Button x:Name="BtnActualizar" 
                                Text="âœï¸ Actualizar" 
                                BackgroundColor="#ED8936" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="130"
                                HeightRequest="50"
                                IsVisible="False"
                                Clicked="OnActualizarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#ED8936" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                        <Button x:Name="BtnCancelar" 
                                Text="âŒ Cancelar" 
                                BackgroundColor="#A0AEC0" 
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                WidthRequest="120"
                                HeightRequest="50"
                                Clicked="OnCancelarClicked">
                            <Button.Shadow>
                                <Shadow Brush="#A0AEC0" Opacity="0.3" Radius="8" Offset="0,4"/>
                            </Button.Shadow>
                        </Button>

                    </StackLayout>
                </StackLayout>
            </Border>

            <!-- Lista de Gastos -->
            <StackLayout Grid.Row="1" Margin="10">
                <Label Text="Lista de Gastos" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       Margin="0,10"/>

                <Button Text="Cargar Gastos" 
                        BackgroundColor="Blue" 
                        TextColor="White" 
                        Clicked="OnCargarGastosClicked" 
                        Margin="0,0,0,10"/>

                <CollectionView x:Name="CollectionViewGastos" 
                                SelectionMode="Single" 
                                SelectionChanged="OnGastoSeleccionado">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="15" 
                                  BackgroundColor="White" 
                                  Margin="0,2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Label Text="{Binding Categoria}" 
                                           FontSize="16" 
                                           TextColor="Gray"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Monto, StringFormat='${0:F2}'}" 
                                           FontSize="14" 
                                           TextColor="Green"/>
                                </StackLayout>

                                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Label Text="{Binding Descripcion}" 
                                           TextColor="Gray"
                                           FontSize="12"/>
                                    
                                    <Label Text="{Binding Cuenta}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                </StackLayout>

                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Nota}" 
                                       FontSize="10" 
                                       TextColor="DarkGray"/>

                                <Button Grid.Row="3" Grid.Column="1"
                                        Text="Eliminar" 
                                        BackgroundColor="Red" 
                                        TextColor="White" 
                                        FontSize="12"
                                        Padding="10,5"
                                        Clicked="OnEliminarClicked"
                                        CommandParameter="{Binding .}"/>

                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

        </Grid>
    </ScrollView>

</ContentPage>