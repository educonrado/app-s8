<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_s8.Views.LoginPage"
             BackgroundColor="#003366">

    <Grid RowDefinitions="Auto,*">

        <!-- Parte superior (azul) -->
        <VerticalStackLayout Padding="30"
                             Spacing="20"
                             BackgroundColor="#003366"
                             Grid.Row="0">
            <Label Text="V 1.0.0"/>
            <Image Source="splash.svg"
       HeightRequest="140"
       WidthRequest="140"
       HorizontalOptions="Center"
       Margin="0,60,0,20" />

            <Label Text="Cusqui App"
       FontSize="36"
       FontAttributes="Bold"
       TextColor="White"
       HorizontalOptions="Center"
       Margin="0,0,0,10" />

        </VerticalStackLayout>

        <!-- Parte inferior (negro, ocupa el resto de la pantalla) -->
        <!-- Parte inferior (negro, ocupa el resto de la pantalla) -->
        <Grid Grid.Row="1"
      BackgroundColor="#003366"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand">
            <VerticalStackLayout HorizontalOptions="Center"
                     VerticalOptions="End"
                     Spacing="5"
                     Margin="0,20,0,20">

                <!-- Check con texto -->
                <HorizontalStackLayout Spacing="5"
                           VerticalOptions="Center">

                    <CheckBox x:Name="termsCheckBox"
                  Color="White" />

                    <Label Text="Acepto los "
               TextColor="White"
               VerticalOptions="Center" />

                    <!-- Parte del texto clickeable -->
                    <Label Text="Términos y Condiciones"
               TextColor="LightBlue"
               FontAttributes="Bold"
               VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTermsTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Centramos el contenido en ambas direcciones -->
            <HorizontalStackLayout HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Spacing="10">

                <Button x:Name="loginButton"
                Text="Iniciar sesión"
                Clicked="OnLogin"
                BackgroundColor="#CCFFFFFF"
                TextColor="Black"
                FontAttributes="Bold"
                CornerRadius="12"
                Padding="20,10"
                HeightRequest="50"
                FontSize="18"
                WidthRequest="200" />

                <Image Source="icongoogle.png"
               HeightRequest="40"
               WidthRequest="40"
               VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>


    </Grid>
</ContentPage>
